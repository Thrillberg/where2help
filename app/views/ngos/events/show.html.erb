<div class="event-header">
  <h2>
    <%= @event.title %>
  </h2>
</div>
<div class="row">
  <div class="col-sm-3 col-sm-push-9 text-center">
    <%= render 'buttons', event: @event %>
  </div>
  <div class="col-sm-9 col-sm-pull-3">
    <ul class="fa-ul">
      <li class="detail-row">
        <i class="fa-li fa fa-eye-slash fa-fw"></i>
        <%= label_for_event_state @event %>
      </li>
      <li class="detail-row">
        <i class="fa-li fa fa-info-circle fa-fw"></i>
        <%= @event.description %>
      </li>
      <li class="detail-row">
        <i class="fa-li fa fa-map-marker fa-fw"></i>
        <%= @event.address %>
      </li>
    </ul>
    <div id="shift-map" class="map" data-behavior="map-container" data-lat="<%= @event.lat %>" data-long="<%= @event.lng %>"></div>
    <div class="panel panel-default">
      <%= render partial: 'shift', collection: @event.shifts %>
    </div>
  </div>
</div>
