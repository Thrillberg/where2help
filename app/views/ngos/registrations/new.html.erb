<div class="page-header text-center">
  <h2><i class="fa fa-users" aria-hidden="true"></i> <%= t('.sign_up') %></h2>
</div>
<div class="registration-row">
  <div class="col-sm-6">
    <%= image_tag 'sign_up_ngo', class: 'img-responsive img-rounded' %>
  </div>
  <div class="col-sm-6 bottom-column">
    <%= simple_format t('.motivation_txt') %>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <%= semantic_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="col-sm-6">
        <%= render 'contact_fields', f: f %>
      </div>
      <div class="col-sm-6">
        <%= render 'ngo_fields', f: f %>
        <%= f.input :terms_and_conditions, as: :boolean,
          label: "#{t('.accept_terms_and_conditions')} #{render 'terms_and_conditions', resource: f.object}".html_safe %>
        <%= f.action :submit, label: t('devise.registrations.new.sign_up'),
                              button_html: {
                                class: 'btn btn-primary btn-block',
                                disable_with: "<i class='fa fa-spinner fa-spin'></i>"
                              } %>
        <%= render "ngos/shared/links" %>
      </div>
    <% end %>
  </div>
</div>
