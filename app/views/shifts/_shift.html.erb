<div class="row">
  <div class="col-xs-2 col-sm-1 text-left">
    <%= render 'calendar_icon', date: shift.starts_at %>
  </div>
  <div class="col-xs-8 col-sm-3 text-center">
    <h4><%= shift.starts_at.to_s(:time) %> - <%= shift.ends_at.to_s(:time) %></h4>
  </div>
  <div class="col-xs-8 visible-xs-block"><br></div>

  <div class="col-xs-12 col-sm-4">
    <%= render shift.progress_bar(current_user) %>
  </div>
  <div class="col-xs-12 col-sm-4 col-md-3 col-md-offset-1">
    <%= opt_button_for shift, current_user %>
  </div>
</div>
<hr>
