<% if I18n.locale == :en %>
  <%= link_to(request.get? ? url_for(locale: :de, action: request.parameters['action']) : root_path(locale: :de), class: 'footer-txt') do %>
    <%= flag_icon(:at, class: 'strong') %>
  <% end %>
<% else %>
  <%= link_to(request.get? ? url_for(locale: :en, action: request.parameters['action']) : root_path(locale: :en), class: 'footer-txt') do %>
    <%= flag_icon(:gb, class: 'strong') %>
  <% end %>
<% end %>
