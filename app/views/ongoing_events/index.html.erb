<div class="row">
  <div class="col-xs-12 text-center">
    <%= simple_format t(".welcome") %>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <div class="btn-group btn-group-justified m_ngo-event-toggle-buttons">
      <%= link_to t(".events"),         events_path,         class: "btn btn-default" %>
      <%= link_to t(".ongoing_events"), ongoing_events_path, class: "btn btn-default active" %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <% if @events.any? %>
      <h2><%= t(".ongoing_events") %></h2>
      <div class="list-group">
        <% @events.each do |event| %>
          <%= link_to event, class: "list-group-item ngo-ongoing-event-item" do %>
            <div class="row">
              <div class="col-xs-9 col-sm-10">
                <div class="col-xs-12 col-sm-12">
                  <strong><%= event.title %></strong><br/>
                  <span><%= event.contact_person %></span><br/>
                  <span><%= event.address %></span>
                </div>
              </div>
              <div class="col-xs-3 col-sm-2">
                <%= render partial: "progress_bar/progress_bar", object: @operation.progress_bar(event) %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <%= render('empty_message') %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 text-center pagination-btn">
    <%= load_more_events_btn @events %>
  </div>
</div>
