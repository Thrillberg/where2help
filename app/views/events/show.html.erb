<div class="page-header">
  <h3>
    <%= render 'calendar_icon', date: @event.earliest_shift.starts_at %>
    <%= @event.title %>
  </h3>
</div>
<div class="row">
  <div class="col-sm-12 ">
    <ul class="fa-ul">
      <li class="detail-row">
        <i class="fa-li fa fa-clock-o fa-fw"></i>
        <%= @event.earliest_shift.starts_at.strftime('%H:%M') %> - <%= @event.earliest_shift.ends_at.strftime('%H:%M') %>
      </li>
      <li class="detail-row">
        <i class="fa-li fa fa-map-marker fa-fw"></i>
        <%= @event.address %>
        <div id="shift-map" class="map" data-behavior="map-container" data-lat="<%= @event.lat %>" data-long="<%= @event.lng %>"></div>
      </li>
      <li class="detail-row">
        <i class="fa-li fa fa-info-circle fa-fw"></i>
        <%= format_description @event.description %>
      </li>
      <li class="detail-row">
        <i class="fa-li fa fa-users fa-fw"></i> <%= @event.ngo.name %>
      </li>
    </ul>
  </div>
</div>
<div class="event-shifts-list" data-behavior="shift-container">
  <%= render(@event.future_shifts) || render('empty_message') %>
</div>
