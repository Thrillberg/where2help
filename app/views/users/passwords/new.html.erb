<div class="row">
  <%= render 'users/header_sm', txt: t('devise.passwords.new.forgot_your_password') %>
  <div class="col-sm-5 col-sm-offset-3 col-md-4 col-md-offset-4">
    <%= semantic_form_for(resource, as: resource_name, url: password_path(resource_name)) do |f| %>
      <%= f.input :email, label: false, autofocus: true, placeholder: resource.class.human_attribute_name(:email) %>
      <div class="form-group">
        <%= f.submit t('devise.passwords.new.send_me_reset_password_instructions'), class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>
    <%= render 'users/shared/links' %>
  </div>
</div>
