<div class="row">
  <%= render 'users/header_sm', txt: t('.please_login') %>
  <div class="col-sm-4 col-sm-offset-4">
    <%= semantic_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.input :email, label: false, autofocus: true, placeholder: resource.class.human_attribute_name(:email) %>
      <%= f.input :password, label: false, autocomplete: 'off', placeholder: resource.class.human_attribute_name(:password) %>
      <%= f.input :remember_me, as: :boolean %>
      <div class="form-group">
        <%= f.action :submit, label: t('.login'), button_html: { class: 'btn btn-primary btn-block' } %>
      </div>
      <div class="form-group">
        <%= link_to t('.login_as_ngo').html_safe, new_ngo_session_path, class: 'btn btn-default btn-block btn-sm' %>
      </div>
    <% end %>
    <%= render 'users/shared/links' %>
  </div>
</div>
